<style>
	table
	{
		width:400px;
		margin-left:auto;
		margin-right:auto;
	}
	tr:nth-child(odd)
	{
		background:#e5e5e5;
		color:#444;
	}
	tr:nth-child(even)
	{
		background:#444;
		color:#e5e5e5;
	}
	td
	{
		padding:10px;
	}
	tr:nth-child(odd) a:link
	{
		color:#444;
	}
	tr:nth-child(odd) a:visited
	{
		color:#444;
	}
	tr:nth-child(odd) a:active
	{
		color:#444;
	}
	tr:nth-child(odd) a:hover
	{
		color:#444;
	}


	tr:nth-child(even) a:link
	{
		color:#e5e5e5;
	}
	tr:nth-child(even) a:visited
	{
		color:#e5e5e5;
	}
	tr:nth-child(even) a:active
	{
		color:#e5e5e5;
	}
	tr:nth-child(even) a:hover
	{
		color:#e5e5e5;
	}
</style>
<table>
<% @users.each do |u| %>
	<tr>
		<td>
			<%= u.email %>
		</td>
		<td>
			<%= link_to("Edit",{:controller=>'users',:action=>"edit",:id=>u.id}) %>
		</td>
		<td>
			<%= link_to("Delete",{:controller=>'users',:action=>"destroy",:id=>u.id}) %>
		</td>
		<td>
			<%= link_to("Show",{:controller=>'users',:action=>"show",:id=>u.id}) %>
		</td>
	</tr>
<% end %>
</table>
	